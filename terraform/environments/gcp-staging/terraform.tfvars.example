# GCP Staging Environment Configuration

project_id = "your-gcp-project-id"
region     = "us-central1"
team       = "platform"

app_namespace = "mcp-staging"

# Monitoring
monitoring_notification_channels = []

# Security (set to true to test before production)
enable_cloud_armor          = false
enable_binary_authorization = false
enable_fleet_registration   = false

# Enable deletion protection before going to production
enable_deletion_protection = false

# Master authorized networks (optional)
enable_master_authorized_networks = false
master_authorized_networks_cidrs  = []

# Databases
additional_databases = []

# Secret Manager secrets
app_secret_ids = []
