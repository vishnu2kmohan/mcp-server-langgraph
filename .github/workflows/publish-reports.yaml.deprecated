name: Publish Reports to GitHub Pages

# ==============================================================================
# Publish Reports - Consolidates CI reports to GitHub Pages dashboard
# ==============================================================================
#
# Purpose:
#   Publishes various CI-generated reports to GitHub Pages for easy access
#   and historical tracking. Creates a unified dashboard for all metrics.
#
# Reports Published:
#   - Benchmark results (pytest-benchmark) ‚Üí /dev/bench/
#   - Coverage trends ‚Üí /coverage/
#   - Security scan results ‚Üí /security/
#   - Compliance reports ‚Üí /compliance/
#   - DORA metrics ‚Üí /dora/
#
# Triggers:
#   - After quality-tests workflow completes on main
#   - After security-scan workflow completes on main
#   - Weekly schedule for consolidated reports
#   - Manual trigger for ad-hoc publishing
#
# ==============================================================================

on:
  workflow_run:
    workflows:
      - "Quality Tests"
      - "Security Scan"
      - "GCP Compliance Scan"
      - "Coverage Trend Tracking"
    types:
      - completed
    branches:
      - main

  schedule:
    # Weekly on Sunday at 1 AM UTC (after quality tests at midnight)
    - cron: '0 1 * * 0'

  workflow_dispatch:
    inputs:
      force_rebuild:
        description: 'Force rebuild of all reports'
        required: false
        default: false
        type: boolean

permissions:
  contents: write
  pages: write
  id-token: write

concurrency:
  group: publish-reports
  cancel-in-progress: false  # Don't cancel in-progress publishes

jobs:
  collect-artifacts:
    name: Collect Report Artifacts
    runs-on: ubuntu-latest
    # Only run if triggering workflow succeeded, or if manual/scheduled
    if: >
      github.event_name == 'workflow_dispatch' ||
      github.event_name == 'schedule' ||
      (github.event_name == 'workflow_run' && github.event.workflow_run.conclusion == 'success')

    outputs:
      has_benchmarks: ${{ steps.check.outputs.has_benchmarks }}
      has_coverage: ${{ steps.check.outputs.has_coverage }}
      has_security: ${{ steps.check.outputs.has_security }}
      has_compliance: ${{ steps.check.outputs.has_compliance }}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v6

      - name: Download benchmark results
        uses: actions/download-artifact@v6
        with:
          name: benchmark-results
          path: reports/benchmarks/
        continue-on-error: true

      - name: Download coverage reports
        uses: actions/download-artifact@v6
        with:
          pattern: coverage-*
          path: reports/coverage/
          merge-multiple: true
        continue-on-error: true

      - name: Download security reports
        uses: actions/download-artifact@v6
        with:
          name: trivy-comprehensive-report
          path: reports/security/trivy/
        continue-on-error: true

      - name: Download dependency reports
        uses: actions/download-artifact@v6
        with:
          name: dependency-reports
          path: reports/security/dependencies/
        continue-on-error: true

      - name: Download license report
        uses: actions/download-artifact@v6
        with:
          name: license-report
          path: reports/security/licenses/
        continue-on-error: true

      - name: Download compliance report
        uses: actions/download-artifact@v6
        with:
          name: compliance-report
          path: reports/compliance/
        continue-on-error: true

      - name: Download mutation test results
        uses: actions/download-artifact@v6
        with:
          name: mutation-test-results
          path: reports/mutation/
        continue-on-error: true

      - name: Check available reports
        id: check
        run: |
          echo "has_benchmarks=$([ -d reports/benchmarks ] && [ -n "$(ls -A reports/benchmarks 2>/dev/null)" ] && echo 'true' || echo 'false')" >> $GITHUB_OUTPUT
          echo "has_coverage=$([ -d reports/coverage ] && [ -n "$(ls -A reports/coverage 2>/dev/null)" ] && echo 'true' || echo 'false')" >> $GITHUB_OUTPUT
          echo "has_security=$([ -d reports/security ] && [ -n "$(ls -A reports/security 2>/dev/null)" ] && echo 'true' || echo 'false')" >> $GITHUB_OUTPUT
          echo "has_compliance=$([ -d reports/compliance ] && [ -n "$(ls -A reports/compliance 2>/dev/null)" ] && echo 'true' || echo 'false')" >> $GITHUB_OUTPUT

          echo "=== Available Reports ==="
          find reports/ -type f 2>/dev/null | head -50 || echo "No reports found"

      - name: Upload collected reports
        uses: actions/upload-artifact@v5
        with:
          name: collected-reports
          path: reports/
          retention-days: 7

  publish-to-ghpages:
    name: Publish to GitHub Pages
    runs-on: ubuntu-latest
    needs: collect-artifacts

    steps:
      - name: Checkout gh-pages branch
        uses: actions/checkout@v6
        with:
          ref: gh-pages
          fetch-depth: 0

      - name: Download collected reports
        uses: actions/download-artifact@v6
        with:
          name: collected-reports
          path: new-reports/
        continue-on-error: true

      - name: Generate timestamp
        id: timestamp
        run: echo "timestamp=$(date -u +%Y-%m-%dT%H:%M:%SZ)" >> $GITHUB_OUTPUT

      - name: Update reports structure
        run: |
          # Create directory structure if not exists
          mkdir -p coverage security compliance mutation dora

          # Guard: Skip if artifact download failed (continue-on-error)
          if [ ! -d new-reports ]; then
            echo "No reports artifact downloaded - skipping update"
            exit 0
          fi

          # Move benchmark data (handled by benchmark-action, skip here)
          # Benchmarks are already published by quality-tests.yaml

          # Move coverage reports
          if [ -d new-reports/coverage ]; then
            echo "Updating coverage reports..."
            cp -r new-reports/coverage/* coverage/ 2>/dev/null || true
          fi

          # Move security reports
          if [ -d new-reports/security ]; then
            echo "Updating security reports..."
            cp -r new-reports/security/* security/ 2>/dev/null || true
          fi

          # Move compliance reports
          if [ -d new-reports/compliance ]; then
            echo "Updating compliance reports..."
            cp -r new-reports/compliance/* compliance/ 2>/dev/null || true
          fi

          # Move mutation test results
          if [ -d new-reports/mutation ]; then
            echo "Updating mutation test reports..."
            cp -r new-reports/mutation/* mutation/ 2>/dev/null || true
          fi

          # Update last-updated timestamp
          echo "${{ steps.timestamp.outputs.timestamp }}" > .last-updated

      - name: Generate dashboard index
        run: |
          cat > index.html << 'DASHBOARD_EOF'
          <!DOCTYPE html>
          <html lang="en">
          <head>
              <meta charset="UTF-8">
              <meta name="viewport" content="width=device-width, initial-scale=1.0">
              <title>MCP Server LangGraph - CI Dashboard</title>
              <style>
                  :root {
                      --bg-primary: #0d1117;
                      --bg-secondary: #161b22;
                      --bg-tertiary: #21262d;
                      --text-primary: #c9d1d9;
                      --text-secondary: #8b949e;
                      --accent-blue: #58a6ff;
                      --accent-green: #3fb950;
                      --accent-yellow: #d29922;
                      --accent-red: #f85149;
                      --accent-purple: #a371f7;
                      --border-color: #30363d;
                  }
                  * { box-sizing: border-box; margin: 0; padding: 0; }
                  body {
                      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
                      background: var(--bg-primary);
                      color: var(--text-primary);
                      line-height: 1.6;
                      padding: 2rem;
                  }
                  .container { max-width: 1200px; margin: 0 auto; }
                  header {
                      text-align: center;
                      margin-bottom: 3rem;
                      padding-bottom: 2rem;
                      border-bottom: 1px solid var(--border-color);
                  }
                  h1 {
                      font-size: 2.5rem;
                      margin-bottom: 0.5rem;
                      background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
                      -webkit-background-clip: text;
                      -webkit-text-fill-color: transparent;
                  }
                  .subtitle { color: var(--text-secondary); font-size: 1.1rem; }
                  .grid {
                      display: grid;
                      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                      gap: 1.5rem;
                      margin-bottom: 2rem;
                  }
                  .card {
                      background: var(--bg-secondary);
                      border: 1px solid var(--border-color);
                      border-radius: 12px;
                      padding: 1.5rem;
                      transition: transform 0.2s, border-color 0.2s;
                  }
                  .card:hover {
                      transform: translateY(-2px);
                      border-color: var(--accent-blue);
                  }
                  .card-header {
                      display: flex;
                      align-items: center;
                      gap: 0.75rem;
                      margin-bottom: 1rem;
                  }
                  .card-icon {
                      width: 40px;
                      height: 40px;
                      border-radius: 8px;
                      display: flex;
                      align-items: center;
                      justify-content: center;
                      font-size: 1.25rem;
                  }
                  .card-icon.perf { background: rgba(88, 166, 255, 0.2); }
                  .card-icon.coverage { background: rgba(63, 185, 80, 0.2); }
                  .card-icon.security { background: rgba(248, 81, 73, 0.2); }
                  .card-icon.compliance { background: rgba(163, 113, 247, 0.2); }
                  .card-icon.mutation { background: rgba(210, 153, 34, 0.2); }
                  .card h2 { font-size: 1.25rem; color: var(--text-primary); }
                  .card p { color: var(--text-secondary); margin-bottom: 1rem; font-size: 0.9rem; }
                  .card a {
                      display: inline-block;
                      color: var(--accent-blue);
                      text-decoration: none;
                      font-weight: 500;
                  }
                  .card a:hover { text-decoration: underline; }
                  .status {
                      display: inline-flex;
                      align-items: center;
                      gap: 0.5rem;
                      padding: 0.25rem 0.75rem;
                      border-radius: 20px;
                      font-size: 0.8rem;
                      font-weight: 500;
                  }
                  .status.active {
                      background: rgba(63, 185, 80, 0.2);
                      color: var(--accent-green);
                  }
                  .status.pending {
                      background: rgba(210, 153, 34, 0.2);
                      color: var(--accent-yellow);
                  }
                  footer {
                      text-align: center;
                      padding-top: 2rem;
                      border-top: 1px solid var(--border-color);
                      color: var(--text-secondary);
                      font-size: 0.85rem;
                  }
                  footer a { color: var(--accent-blue); text-decoration: none; }
                  footer a:hover { text-decoration: underline; }
                  .last-updated { margin-top: 0.5rem; font-size: 0.8rem; }
              </style>
          </head>
          <body>
              <div class="container">
                  <header>
                      <h1>üöÄ MCP Server LangGraph</h1>
                      <p class="subtitle">Continuous Integration Dashboard</p>
                  </header>

                  <div class="grid">
                      <div class="card">
                          <div class="card-header">
                              <div class="card-icon perf">üìä</div>
                              <h2>Performance Benchmarks</h2>
                          </div>
                          <p>Track performance metrics over time. Includes JWT, authorization, LLM, agent, and message processing benchmarks.</p>
                          <span class="status active">‚óè Active</span>
                          <br><br>
                          <a href="./dev/bench/">View Benchmark Dashboard ‚Üí</a>
                      </div>

                      <div class="card">
                          <div class="card-header">
                              <div class="card-icon coverage">üìà</div>
                              <h2>Code Coverage</h2>
                          </div>
                          <p>Test coverage reports from unit, integration, and e2e tests. Track coverage trends over time.</p>
                          <span class="status active">‚óè Active</span>
                          <br><br>
                          <a href="./coverage/">View Coverage Reports ‚Üí</a>
                      </div>

                      <div class="card">
                          <div class="card-header">
                              <div class="card-icon security">üîí</div>
                              <h2>Security Scans</h2>
                          </div>
                          <p>Trivy vulnerability scans, dependency audits, and license compliance reports.</p>
                          <span class="status active">‚óè Active</span>
                          <br><br>
                          <a href="./security/">View Security Reports ‚Üí</a>
                      </div>

                      <div class="card">
                          <div class="card-header">
                              <div class="card-icon compliance">‚úÖ</div>
                              <h2>Compliance Reports</h2>
                          </div>
                          <p>GCP compliance scans, CIS benchmarks, and infrastructure security validation.</p>
                          <span class="status active">‚óè Active</span>
                          <br><br>
                          <a href="./compliance/">View Compliance Reports ‚Üí</a>
                      </div>

                      <div class="card">
                          <div class="card-header">
                              <div class="card-icon mutation">üß¨</div>
                              <h2>Mutation Testing</h2>
                          </div>
                          <p>Test suite effectiveness reports from mutmut. Runs weekly to validate test quality.</p>
                          <span class="status pending">‚óã Weekly</span>
                          <br><br>
                          <a href="./mutation/">View Mutation Reports ‚Üí</a>
                      </div>
                  </div>

                  <footer>
                      <p>
                          <a href="https://github.com/vishnu2kmohan/mcp-server-langgraph">GitHub Repository</a> ‚Ä¢
                          <a href="https://github.com/vishnu2kmohan/mcp-server-langgraph/actions">CI Workflows</a> ‚Ä¢
                          <a href="https://mcp-server-langgraph.mintlify.app/">Documentation</a>
                      </p>
                      <p class="last-updated">Last updated: <span id="last-updated">Loading...</span></p>
                  </footer>
              </div>
              <script>
                  fetch('./.last-updated')
                      .then(r => r.text())
                      .then(t => document.getElementById('last-updated').textContent = new Date(t.trim()).toLocaleString())
                      .catch(() => document.getElementById('last-updated').textContent = 'Unknown');
              </script>
          </body>
          </html>
          DASHBOARD_EOF

      - name: Generate section index pages
        run: |
          # Coverage index
          mkdir -p coverage
          cat > coverage/index.html << 'EOF'
          <!DOCTYPE html>
          <html>
          <head>
              <title>Coverage Reports - MCP Server LangGraph</title>
              <meta http-equiv="refresh" content="0; url=../">
              <style>body{font-family:sans-serif;padding:2rem;}</style>
          </head>
          <body>
              <h1>Coverage Reports</h1>
              <p>Coverage data is available. <a href="../">Back to Dashboard</a></p>
          </body>
          </html>
          EOF

          # Security index
          mkdir -p security
          cat > security/index.html << 'EOF'
          <!DOCTYPE html>
          <html>
          <head>
              <title>Security Reports - MCP Server LangGraph</title>
              <style>
                  body{font-family:-apple-system,sans-serif;padding:2rem;background:#0d1117;color:#c9d1d9;}
                  a{color:#58a6ff;}
                  .report-list{list-style:none;padding:0;}
                  .report-list li{padding:0.5rem 0;border-bottom:1px solid #30363d;}
              </style>
          </head>
          <body>
              <h1>üîí Security Reports</h1>
              <p><a href="../">‚Üê Back to Dashboard</a></p>
              <h2>Available Reports</h2>
              <ul class="report-list">
                  <li><a href="./trivy/">Trivy Vulnerability Scans</a></li>
                  <li><a href="./dependencies/">Dependency Audit Reports</a></li>
                  <li><a href="./licenses/">License Compliance</a></li>
              </ul>
          </body>
          </html>
          EOF

          # Compliance index
          mkdir -p compliance
          cat > compliance/index.html << 'EOF'
          <!DOCTYPE html>
          <html>
          <head>
              <title>Compliance Reports - MCP Server LangGraph</title>
              <style>
                  body{font-family:-apple-system,sans-serif;padding:2rem;background:#0d1117;color:#c9d1d9;}
                  a{color:#58a6ff;}
              </style>
          </head>
          <body>
              <h1>‚úÖ Compliance Reports</h1>
              <p><a href="../">‚Üê Back to Dashboard</a></p>
              <p>GCP compliance scans, CIS benchmarks, and infrastructure validation reports.</p>
          </body>
          </html>
          EOF

          # Mutation index
          mkdir -p mutation
          cat > mutation/index.html << 'EOF'
          <!DOCTYPE html>
          <html>
          <head>
              <title>Mutation Test Reports - MCP Server LangGraph</title>
              <style>
                  body{font-family:-apple-system,sans-serif;padding:2rem;background:#0d1117;color:#c9d1d9;}
                  a{color:#58a6ff;}
              </style>
          </head>
          <body>
              <h1>üß¨ Mutation Test Reports</h1>
              <p><a href="../">‚Üê Back to Dashboard</a></p>
              <p>Mutation testing results from mutmut. Updated weekly.</p>
          </body>
          </html>
          EOF

      - name: Commit and push changes
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

          git add -A
          if git diff --staged --quiet; then
            echo "No changes to commit"
          else
            git commit -m "Update CI reports dashboard - ${{ steps.timestamp.outputs.timestamp }}"
            git push
          fi
